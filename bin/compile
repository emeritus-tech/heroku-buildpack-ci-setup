#!/usr/bin/env bash

function export_env_dir() {
  echo "Loading environment variables..."
  env_dir=$1
  echo $env_dir
  acceptlist_regex=${2:-''}
  echo $acceptlist_regex
  denylist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
  echo $denylist_regex
  if [ -d "$env_dir" ]; then
    for e in $(ls $env_dir); do
      echo "$e" | grep -E "$acceptlist_regex" | grep -qvE "$denylist_regex" &&
      export "$e=$(cat $env_dir/$e)"
      :
    done
  fi
}

export_env_dir

echo "***** Test Cris******"
echo "Checking if the CI is enabled for branch" $CI_ENABLED_BRANCHES
echo "List of enabled branches: " $HEROKU_TEST_RUN_BRANCH

if [[ $CI_ENABLED_BRANCHES != *$HEROKU_TEST_RUN_BRANCH* ]]; then
  echo "The CI for the branch" $HEROKU_TEST_RUN_BRANCH "is disabled"
  echo "If you want to run CI for this branch please include it in the CI_ENABLED_BRANCHES environment variable"
  exit 1
fi
