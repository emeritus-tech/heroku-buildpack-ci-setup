#!/usr/bin/env bash

function export_env_dir() {
  echo "Loading environment variables..."
  env_dir=$1
  echo $env_dir
  acceptlist_regex=${2:-''}
  echo $acceptlist_regex
  denylist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
  echo $denylist_regex
  if [ -d "$env_dir" ]; then
    for e in $(ls $env_dir); do
      echo "$e" | grep -E "$acceptlist_regex" | grep -qvE "$denylist_regex" &&
      export "$e=$(cat $env_dir/$e)"
      :
    done
  fi
}

export_env_dir

curl https://dev-dashboar-add-an-end-j4ydjy.herokuapp.com/api/v1/ci/review_app_configuration > /tmp/review_apps_branches_to_test.txt


echo "Checking if the CI is enabled for branch" $CI_ENABLED_BRANCHES
echo -e "List of enabled branches: \n"
cat /tmp/review_apps_branches_to_test.txt

if ! grep -q "$HEROKU_TEST_RUN_BRANCH" /tmp/review_apps_branches_to_test.txt; then
  echo "****** Exiting... ******"
  echo "If you want to run the CI on this branch, you need to add it to the corresponding section in the dev dashboard."
  exit 1
fi
